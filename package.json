{
  "name": "online-academy",
  "version": "1.0.0",
  "private": true,
  "description": "An online learning and teaching platform",
  "main": "src/index.js",
  "author": "Lê Duy Tâm",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "run-p watch:node watch:scss",
    "start": "run-s build:scss start:node",
    "start:node": "cross-env NODE_ENV=production node src/index.js",
    "watch:node": "nodemon src/index.js -e js,hbs",
    "watch:scss": "sass -w public/scss/main.scss public/css/main.css",
    "prefix:scss": "postcss public/css/main.css --replace --use autoprefixer",
    "compile:scss": "sass --style=compressed public/scss/main.scss public/css/main.css",
    "build:scss": "run-s compile:scss prefix:scss",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bootstrap": "^5.2.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^4.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-handlebars": "^6.0.6",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.0",
    "express-session": "^1.17.3",
    "handlebars-helpers": "^0.10.0",
    "helmet": "^6.0.1",
    "http-status": "^1.5.3",
    "joi": "^17.7.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.8.0",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "nodemailer": "^6.8.0",
    "otp-generator": "^4.0.0",
    "winston": "^3.8.2",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "autoprefixer": "^10.4.13",
    "cross-env": "^7.0.3",
    "eslint": "^8.29.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.20",
    "postcss-cli": "^10.1.0",
    "prettier": "^2.8.0",
    "sass": "^1.56.1"
  }
}
