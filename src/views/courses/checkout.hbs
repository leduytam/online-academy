<div id='course-checkout-page'>
  {{! Left }}
  <div id='course-checkout-page__left' class='shadow'>
    <div class='course-checkout-page__leftContent'>
      <p class='fs-1 fw-bold my-4'>Checkout</p>
      {{! Method }}
      <div>
        <div class='d-flex flex-row justify-content-between align-items-baseline'>
          <p class='fs-3 fw-bold my-4'>Payment method</p>
          <div class='d-flex flex-row align-items-baseline'>
            <p class='text-reset'>Secured connection</p>
            <i class='bi bi-person-fill-lock' style='font-size:1.5rem'></i>
          </div>
        </div>

        <ul class='list-group'>
          <li class='list-group-item py-0'>
            <div class='d-flex flex-row border bg-gray p-3 align-items-baseline justify-content-between'>
              <div class='d-flex flex-row align-items-baseline'>
                <input class='form-check-input me-2' type='radio' name='listGroupRadio' value='' id='paymentCourse-card'
                  data-bs-toggle='collapse' data-bs-target='#paymentCollapse__1' aria-expanded='false'
                  aria-controls='paymentCollapse__1' />
                <label class='form-check-label d-flex flex-row align-items-center' for='paymentCourse-card'>
                  <div class='d-flex flex-row align-items-center'>
                    <i class='bi bi-credit-card fs-4'></i>
                    <p class='fs-6 fw-bold ms-2 mb-0'>Credit/Debit Card</p>
                  </div>
                </label>
              </div>

              <img src='/assets/checkout/card.png' class='img-fluid' style='width: 3.5rem; height: auto' />
            </div>
            <div class='collapse' id='paymentCollapse__1'>
              <div class='card card-body'>
                {{!-- form --}}
                <form id="course-checkout-form" method="post" action="/api/v1/courses/{{this.data.slug}}/enroll">
                  <div class='mb-3'>
                    <label for='cardName' class='form-label fw-bold'>Name on card</label>
                    <input type='text' class='form-control border border-dark card-info-item' id='cardName'
                      placeholder='Name on card'
                      name="cardName"
                      required="required"
                      />
                  </div>
                  <div class='mb-3'>
                    <label for='cardNumber' class='form-label fw-bold'>Card number</label>
                    <input type='text' class='form-control border border-dark card-info-item' id='cardNumber'
                      placeholder='Card number' 
                      required="required"
                      name="cardNumber"
                      pattern="[0-9]{16}"
                      />
                  </div>
                  <div class='row'>
                    <div class='col-6'>
                      <label for='cardExpiry' class='form-label fw-bold'>Expiry</label>
                      <input type='text' class='form-control border border-dark card-info-item' id='cardExpiry'
                        placeholder='MM/YY' 
                        name="cardExpiry"
                        pattern="[0-9]{2}/[0-9]{2}"
                        />
                    </div>
                    <div class='col-6'>
                      <label for='cardCvv' class='form-label fw-bold'>CVV</label>
                      <input type='text' class='form-control border border-dark card-info-item' id='cardCvv'
                        placeholder='123' 
                        name="cardCvv"
                        pattern="[0-9]{3}"
                        />
                    </div>
                  </div>
              </div>
            </div>
          </li>
          <li class='list-group-item py-0'>
            <div class='d-flex flex-row border bg-gray p-3 align-items-baseline'>
              <input class='form-check-input me-2' type='radio' name='listGroupRadio' value='' id='paymentCourse-paypal'
                data-bs-toggle='collapse' data-bs-target='#paymentCollapse__2' aria-expanded='false'
                aria-controls='paymentCollapse__2' />
              <label class='form-check-label d-flex flex-row align-items-center' for='paymentCourse-paypal'>
                <div class='d-flex flex-row align-items-center'>
                  <img src='/assets/checkout/paypal.png' class='img-fluid' style='width: 3.5rem; height: auto' />
                  <p class='fs-6 fw-bold ms-2 mb-0'>Paypal</p>
                </div>
              </label>
            </div>
            <div class='collapse' id='paymentCollapse__2'>
              <div class='card card-body'>
                In order to complete your transaction, we will transfer you over
                to PayPal's secure servers.
              </div>
            </div>
          </li>
        </ul>
      </div>

      {{! Order Detail }}
      <div>
        <p class='fs-3 fw-bold my-4'>Order details</p>
        <div class="d-flex flex-row align-items-baseline justify-content-between">
          <div class="d-flex flex-row align-items-center">
            <img src="{{this.data.thumbnail.url}}" class='img-fluid' style='width: 3.5rem; height: auto' />
            <p class='fs-6 fw-bold ms-2 mb-0'>{{this.data.name}}</p>
          </div>
          <div>
            <p class='fs-6 fw-bold mb-0 d-flex flex-row align-items-center'>
              <i class="bi bi-cash-coin me-2" style="font-size: 1.5rem;"></i>
              ${{this.data.price}}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  {{! Right }}
  <div id='course-checkout-page__right'>
    <div class='course-checkout-page__rightContent'>
      <p class='fs-3 fw-bold my-4'>Summary</p>
      <div>
        <div class="d-row">
          <p class='fs-6 mb-0'>Original price</p>
          <p class='fs-6 mb-0'>${{this.data.price}}</p>
        </div>
        <div class="line-divider"></div>
        <div class="d-row">
          <p class='fs-6 mb-0 fw-bold'>Total</p>
          <p class='fs-6 fw-bold mb-0'>${{this.data.price}}</p>
        </div>
      </div>

      <div class="my-5">
        <button class='btn btn-primary w-100 py-4 fw-bold' id="course-checkout-button">Complete Checkout</button>
        <div class="alert alert-danger d-none my-3" role="alert" id ="course-checkout-error">
          
        </div>
      </div>
    </div>

  </div>
  <button type="button" class="btn-close" aria-label="Close" id="course-checkout-closeButton"></button>
</div>

<script src="/js/courses/course-checkout.js"></script>