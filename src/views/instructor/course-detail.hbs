<div class='container instructor-container'>
  <div class='instructor-responsive-container'>
    <form action='/instructor/create-course' method='POST'>
      <div class='course-container'>
        <div class='d-flex flex-row justify-content-around text-hover mt-1'>
          <h2 class='text-center'>{{course.name}}</h2>
          <button
            id='btn-login'
            class='btn btn-primary w-20 add-lesson-button fs-6'
          >
            <i class='fa-solid fa-square-plus'></i>
            Add section
          </button>
        </div>
        <div class='section-container d-flex flex-column'>
          {{#each course.sections}}
            <div
              class='d-flex flex-row justify-content-between align-items-center text-hover'
            >
              <h5 class='p-1 fs-6'>{{this.name}}</h5>
              <button
                id='btn-login'
                class='btn btn-primary w-20 add-lesson-button fs-6'
              >
                <i class='fa-solid fa-square-plus'></i>
                Add lesson
              </button>
            </div>
            <div class='lesson-container'>
              {{#each this.lessons}}
                <ul class='list-group px-3'>
                  <li class='list-group-item bg-secondary'>{{this.name}}</li>
                </ul>
              {{/each}}
            </div>
          {{/each}}
        </div>
      </div>
      <div class='d-flex form-container'>
        <div class='form-content'>
          <div class='oa-form-group'>
            <label class='oa-form-label oa-heading-sm'>Course Name</label>
            <input
              type='text'
              name='name'
              id='name'
              value='{{course.name}}'
              class='oa-text-input-large'
            />
          </div>

          <div class='oa-form-group image-Name'>
            <label class='oa-form-label oa-heading-sm'>Cover Photo</label>
            <div class='udlite-in-udheavy'>
              <div class='ud-image-upload-preview-wrapper'>
                <div class='image-upload-preview-with-crop'>
                  <img alt='cover' class='img-fluid' />
                </div>
              </div>
              <div class='mb-5 pb-3'>
                <input
                  class='form-control'
                  type='file'
                  id='formFile'
                  name='image'
                  accept='image/*'
                />
              </div>
            </div>
          </div>

        </div>
        <div class='form-content'>
          <div class='oa-form-group'>
            <label class='oa-form-label oa-heading-sm'>Price</label>
            <input
              type='number'
              name='price'
              min='1'
              id='price'
              class='oa-text-input-large'
              placeholder="What's the price of your course?"
              value='{{course.price}}'
            />
          </div>
          <div class='oa-form-group'>
            <label class='oa-form-label oa-heading-sm'>Category</label>
            <select
              class='form-select'
              aria-label='Choose a suitable category'
              name='category'
            >
              <option selected disabled>Choose a suitable category</option>
              {{#each categories as |category|}}
                {{#each this.subcategories as |subcategory|}}
                  <option
                    value='{{subcategory.name}}'
                  >{{subcategory.name}}</option>
                {{/each}}
              {{/each}}
            </select>
          </div>
          <div class='oa-form-group'>
            <label class='oa-form-label oa-heading-sm'>Brief Description</label>
            <input
              type='text'
              name='brief'
              id='brief'
              placeholder='Brief description of your course'
              class='oa-text-input-large'
              value='{{course.briefDescription}}'
            />
          </div>
          <div class='oa-form-group'>
            <label class='oa-form-label oa-heading-sm'>Detail Description</label>
            <input
              type='text'
              name='detail'
              id='detail'
              placeholder='Detail description of your course'
              class='oa-text-input-large'
              value='{{course.detailDescription}}'
            />
          </div>
        </div>
      </div>

      <div class='oa-footer-btns mt-5 d-flex justify-content-end'>
        <button type='submit' class='save-button btn btn-primary'>
          <span>Save</span>
        </button>
      </div>
    </form>
  </div>
</div>