{{> studentHeaderCourse}}

<div class="container mx-auto">
    <div class="row">
        {{#each courses}}
        <div class="col-lg-3 col-md-6 mt-4 course-card" data-id={{this._id}}>
            <div class="card position-relative">
                <img src={{this.coverPhoto}} class="card-img-top" alt="Cover photo">
                <div class="card-body">
                    <div style="height: 4em;">
                        <p class="fw-bold fs-5 course-header">{{this.name}}</p>
                    </div>
                    <p class="card-text fs-6 fw-light mb-0 text-truncate">{{this.instructor.name}}</p>
                    <div class="d-flex align-items-center">
                        <span class = "card-text fs-6" style="color: orange;">4 &nbsp</span>
                        <span class = "fa fa-star checked"></span>
                        <span class = "fa fa-star checked"></span>
                        <span class = "fa fa-star checked"></span>
                        <span class = "fa fa-star checked"></span>
                        <span class = "fa fa-star unchecked">&nbsp</span>
                        <span class = "card-text fs-6 text-black-50">(123)</span>
                    </div>
                <span class="badge bg-warning text-dark">Best seller</span>
                    {{!-- TODO: handle progress later --}}
                    {{!-- <div class="progress" style="height: 5px;">
                        <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25"
                            aria-valuemin="0" aria-valuemax="100"></div>
                    </div> --}}
                    {{!-- TODO: Add complete percentage
                    <p>% complete</p> --}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

<script>
    const cards = document.getElementsByClassName('course-card');
    for (let i = 0; i < cards.length; i++) {
        cards[i].addEventListener('click', () => {
            const courseId = cards[i].getAttribute('data-id');
            window.location.href = `/courses/${courseId}`;
        });
    }

</script>