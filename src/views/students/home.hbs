<div class="container my-3">
    <h2 class="mt-5 fw-bold fs-2 mb-3">Remarkable courses last week</h2>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            {{#each topCourses}}
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to={{@index}} {{#if @first}}class="active" aria-current="true"{{/if}} aria-label="Slide {{@index}}"></button>
            {{/each}}
        </div>
        <div class="carousel-inner">
            {{#each topCourses}}
            <div class="carousel-item {{#if @first}}active{{/if}}" data-slug={{this.slug}} data-isEnrolled={{this.isEnrolled}}>
                <img src={{this.coverPhoto}} class="d-block w-100" alt="..." style="height: 30em;">
                <div class="carousel-caption d-none d-md-block">
                    <h5 class="text-warning fs-3">{{this.name}}</h5>
                </div>
            </div>
            {{/each}}
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
        </div>
    <h2 class="mt-5 fw-bold fs-2 mb-3">Most Viewed Courses</h2>
    <div class="row">
        {{#each mostViewedCourses}}
        <div class="col-md-3 course-card mt-4" data-slug={{this.slug}} data-isEnrolled={{this.isEnrolled}}>
            <div class="card position-relative">
                <div class="position-absolute"  style="top:10px; right:10px;">
                    {{#if this.isEnrolled}}
                    <button type="button" class="btn btn-success" disabled>Enrolled</button>
                    {{else}}
                    <button type="button" class="btn wish-list-button" data-id={{this._id}}>
                        <span class="{{#if this.isWishListed}} fa fa-heart fa-3x {{else}} fa-regular fa-heart fa-3x {{/if}}" style="color: white;"></span>
                    </button>
                    {{/if}}
                </div>
                <img src={{this.coverPhoto}} class="card-img-top" alt="Cover photo">
                <div class="card-body">
                    <div style="height: 4em;">
                        <p class="fw-bold fs-5 course-header">{{this.name}}</p>
                    </div>
                    <p class="card-text fs-6 fw-light mb-0 text-truncate">{{this.instructor.name}}</p>
                    <div class="d-flex align-items-center fs-8 gap-1">
                        <p class="mb-0 text-warning fw-bold">{{roundWithPrecision this.avgRating 1}}</p>
                        {{> stars rating=this.avgRating}}
                        <p class="mb-0 text-muted">({{this.totalRatings}})</p>
                    </div>
                    <p class='fw-bold mb-1 fs-4'>{{currency this.price}}</p>
                    {{#if this.hasBadge}}
                        {{#if this.newest}}
                            <span class="badge bg-primary">Newest</span>
                        {{/if}}

                        {{#if this.mostPopular}}
                            <span class="badge bg-danger bg-opacity-75">Most popular</span>
                        {{/if}}

                        {{#if this.highestRated}}
                            <span class="badge bg-warning bg-opacity-75 text-dark">Highest rating</span>
                        {{/if}}
                    {{else}}
                        <span class="badge bg-success">For you</span>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>		
    <h2 class="mt-5 fw-bold fs-2 mb-3">Latest Courses</h2>
    <div class="row">
        {{#each latestCourses}}
        <div class="col-md-3 course-card mt-4" data-slug={{this.slug}} data-isEnrolled={{this.isEnrolled}} >
            <div class="card position-relative">
                <div class="position-absolute"  style="top:10px; right:10px;">
                    {{#if this.isEnrolled}}
                    <button type="button" class="btn btn-success" disabled>Enrolled</button>
                    {{else}}
                    <button type="button" class="btn wish-list-button" data-id={{this._id}}>
                        <span class="{{#if this.isWishListed}} fa fa-heart fa-3x {{else}} fa-regular fa-heart fa-3x {{/if}}" style="color: white;"></span>
                    </button>
                    {{/if}}
                </div>
                <img src={{this.coverPhoto}} class="card-img-top" alt="Cover photo">
                <div class="card-body">
                    <div style="height: 4em;">
                        <p class="fw-bold fs-5 course-header">{{this.name}}</p>
                    </div>
                    <p class="card-text fs-6 fw-light mb-0 text-truncate">{{this.instructor.name}}</p>
                    <div class="d-flex align-items-center fs-8 gap-1">
                        <p class="mb-0 text-warning fw-bold">{{roundWithPrecision this.avgRating 1}}</p>
                        {{> stars rating=this.avgRating}}
                        <p class="mb-0 text-muted">({{this.totalRatings}})</p>
                    </div>
                    <p class='fw-bold mb-1 fs-4'>{{currency this.price}}</p>
                    {{#if this.hasBadge}}
                        {{#if this.newest}}
                            <span class="badge bg-primary">Newest</span>
                        {{/if}}

                        {{#if this.mostPopular}}
                            <span class="badge bg-danger bg-opacity-75">Most popular</span>
                        {{/if}}

                        {{#if this.highestRated}}
                            <span class="badge bg-warning bg-opacity-75 text-dark">Highest rating</span>
                        {{/if}}
                    {{else}}
                        <span class="badge bg-success">For you</span>
                    {{/if}}
                </p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>		
    <h2 class="mt-5 fw-bold fs-2 mb-3">Topic Recommended for you</h2>
    <div class="row">
        {{#each mostEnrolledSubCategories}}
        <div class="col-4 mb-2">
            <a class="card" href="/categories/{{this.slug}}/{{this.subCategory.slug}}" style="text-decoration: none;">
                <div class="card-body">
                    <p class="text-center card-text fs-5 fw-bold">{{this.subCategory.name}}</p>
                </div>
            </a>
        </div>
        {{/each}}
    </div>

</div>

<script src='/js/student/redirectCard.js'></script>
<script>
    let items = document.querySelectorAll('.custom-carousel .carousel-item')

		items.forEach((el) => {
			const minPerSlide = 4
			let next = el.nextElementSibling
			for (var i=1; i<minPerSlide; i++) {
				if (!next) {
            next = items[0]
        }
        let cloneChild = next.cloneNode(true)
        el.appendChild(cloneChild.children[0])
        next = next.nextElementSibling
    }
})
</script>
