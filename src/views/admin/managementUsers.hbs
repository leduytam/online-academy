<div class='mx-2'>

  <div class='search d-flex row' style='margin-top: 20px;'>
    <form class='form-inline my-2 my-lg-0 d-flex'>
      <input
        class='form-control mr-sm-2'
        type='search'
        placeholder='Search'
        aria-label='Search'
      />
      <button class='btn btn-outline-success my-2 my-sm-0' type='submit'>
        <i class='bi bi-search'></i>
        Search
      </button>
    </form>
    <form class='form-inline my-2'>
      <button class='btn btn-outline-success my-2 my-sm-0' type='submit'>
        <i class='bi bi-person-fill-add'></i>
        Add
      </button>
    </form>
  </div>

  <table class='table table-striped table-bordered display' id='users_table'>
    <thread>
      <tr>
        <th>User Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Actions</th>
      </tr>
    </thread>

  </table>
</div>

