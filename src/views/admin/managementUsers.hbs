<div class='container my-5 overflow-hidden'>
  <div class='search d-flex justify-content-between' style='margin-top: 20px;'>
    <form class='form-inline my-2 my-lg-0 d-flex'>
      <input
        class='form-control mr-sm-2'
        type='search'
        placeholder='Search'
        aria-label='Search'
        style='width: 180px;'
      />
      <button class='btn btn-outline-success my-2 my-sm-0' type='submit'>
        <i class="bi bi-search"></i>
        Search
      </button>
    </form>
    <form class='form-inline my-2 my-lg-0'>
      <button class='btn btn-outline-success my-2 my-sm-0' type='submit'>
        <i class="bi bi-person-fill-add"></i>
        Add
      </button>
    </form>
  </div>
  <table class='table table-hover align-middle mb-0 bg-white table-bordered'>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Status</th>
        <th>Role</th>
        <th>Action</th>
      </tr>
    {{#each users }}
      <tr>
        <td>
          <p class='fw-bold mb-1'>{{this.name}}</p>
        </td>
        <td>
          <p class='text-muted mb-0'>{{this.email}}</p>
        </td>
        <td>
          <span class='badge bg-info text-dark'>{{this.status}}</span>
        </td>
        <td>Student</td>
        <td>
          <button
            type='button'
            class='btn btn-link btn-rounded btn-sm fw-bold'
            data-mdb-ripple-color='dark'
          >
            Edit
          </button>
        </td>
      </tr>
    {{/each}}
  </table>
  <nav aria-label='...'>
    <ul class='pagination justify-content-end'>
      <li class='page-item disabled'>
        <a
          class='page-link'
          href='#'
          tabindex='-1'
          aria-disabled='true'
        >Previous</a>
      </li>
      <li class='page-item'><a class='page-link' href='#'>1</a></li>
      <li class='page-item active' aria-current='page'>
        <a class='page-link' href='#'>2</a>
      </li>
      <li class='page-item'><a class='page-link' href='#'>3</a></li>
      <li class='page-item'>
        <a class='page-link' href='#'>Next</a>
      </li>
    </ul>
  </nav>
  {{log users}}
</div>
